<h2><%= @task.name %></h2>

<%= form_for @task do |f| %>
  <%= f.hidden_field :complete, value: true %>
  <%= f.submit 'Mission accomplished!' %>
<% end %>

<h4><%= link_to "Give up and delete. You're not going to finish it anyway.", @task, :method => :delete, :data => { :confirm => 'You should feel ashamed of yourself.' } %></h4>

<h4><%= link_to "Nevermind...", list_path(@task.list) %></h4>