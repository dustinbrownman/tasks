<h2><%= @list.name %></h2>

<%= render 'tasks/form' %>

<ul>
  <% @tasks_not_complete.each do |task| %>
    <li><%= link_to task.name, edit_task_path(task) %></li>
  <% end %>
</ul>

<h4>Things I totally crushed:</h4>

<ul>
  <% @tasks_complete.each do |task| %>
    <li><%= link_to task.name, edit_task_path(task) %></li>
  <% end %>
</ul>

<p><%= link_to "Begone, foul list!", @list, :method => :delete, :data => { :confirm => 'Poof!' } %></p>

<p><%= link_to "10,000-foot view", lists_path %></p>